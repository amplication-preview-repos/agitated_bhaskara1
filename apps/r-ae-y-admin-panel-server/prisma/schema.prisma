datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt       DateTime         @default(now())
  email           String?          @unique
  firstName       String?
  id              String           @id @default(cuid())
  lastName        String?
  licenses        License[]
  password        String
  roleManagements RoleManagement[]
  roles           Json
  updatedAt       DateTime         @updatedAt
  username        String           @unique
}

model RoleManagement {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  roles     Json?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model AdminUser {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  password  String?
  updatedAt DateTime @updatedAt
  username  String?
}

model License {
  createdAt  DateTime           @default(now())
  expiryDate DateTime?
  id         String             @id @default(cuid())
  status     EnumLicenseStatus?
  updatedAt  DateTime           @updatedAt
  user       User?              @relation(fields: [userId], references: [id])
  userId     String?
}

enum EnumLicenseStatus {
  Option1
}
